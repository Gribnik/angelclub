<form id="editpost" action="{% if post.id == '' %} {{ path('post_create') }} {% else %} {{ path('post_update', {'post_id': post.id}) }} {% endif %}"
      method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.tags) }}
    {{ form_row(form.content) }}

    {{ form_rest(form) }}

    <input type="submit" value="Submit" />
</form>