<script type="text/template" id="hb-form-template">
    <span title="Edit homepage banner" class="glyphicon glyphicon-cog" id="hb-change-button"></span>
    <form id="hb-form" action="{{ path('set_home_banner') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.content) }}

        {{ form_rest(form) }}
        <input type="submit" id="hb-save-button" value="Save" />
        <input type="button" id="hb-preview-button" value="Preview" />
    </form>
</script>