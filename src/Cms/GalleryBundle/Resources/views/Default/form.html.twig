<form id="gallery-image" action="{% if image.id == '' %} {{ path('gallery_image_create') }} {% else %} {{ path('gallery_image_update', {'image_id': image.id}) }} {% endif %}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {{ form_row(form.file) }}
    {% if image.getFeaturedImage() != '' %} <img src="{{ image.getWebPath() }}" alt="" /> {% endif %}
    {{ form_row(form.content) }}

    {{ form_rest(form) }}
    <input type="submit" value="Submit" />
</form>