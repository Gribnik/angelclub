{% extends 'CmsXutBundle::layout.html.twig' %}
{% block body %}
    <article class="blog">
        <h1>{{ post.name }}</h1>
        <div class="date">
            <time datetime="{{ post.dateCreated|date('c') }}">
                {{ post.dateCreated|date('l, F j, Y') }}
            </time>
        </div>
        <div class="content">
            {{ post.content }}
        </div>
        <div class="tags">
            {% for tag in post.tags %}
                <a href="{{ path('blog_list_posts_by_tag', { 'tagname': tag.name }) }}">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </article>
    <div class="comments">
        Comments go here
    </div>
{% endblock %}